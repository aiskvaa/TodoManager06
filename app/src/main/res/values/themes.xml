<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoManager06" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BoardingTextViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="BoardingTextViewsWelcome">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Animation">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="TextAndButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="DueDateAndRepeat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>

    </style>

    <style name="Date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>

    </style>



</resources>